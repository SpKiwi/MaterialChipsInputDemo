<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <EditText
        android:id="@+id/hashtag_text_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="#Add hashtag"
        android:background="@drawable/bg_hashtag"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="#music" />

    <ImageView
        android:id="@+id/hashtag_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/presence_offline"
        app:layout_constraintBottom_toBottomOf="@id/hashtag_text_edit"
        app:layout_constraintStart_toEndOf="@id/hashtag_text_edit"
        app:layout_constraintTop_toTopOf="@id/hashtag_text_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>